<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :image %>


      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <th>introdacution</th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <div class="btn btn-outline-secondary btn-block">
          <%= link_to "aikon", users_show_path %>
        </div>

        <h2>New book</h2>

        <%= form_with model: @book, local: true do |f| %>
          <h4>title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <%end%>


      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td></td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <%end%>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <%end%>
        </tbody>

      </table>

    </div>
  </div>
</div>

