<h1>Book detail</h1>
<table class="table table-hover table-inverse">
 <tbody>
    <tr>
      <td></td>
      <td>
        <%= link_to @book do %>
        <%= @book.title %>
        <%end%>
      </td>
      <td>
        <%= @book.body %>
      </td>
      <td></td>
      <td>
        <% if @book.user == current_user %>
        <%= link_to "destroy", book_path(@book), method: :delete %>
        <%end%>
      </td>
    </tr>
  </tbody>
</table>