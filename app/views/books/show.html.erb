<%= notice %>
<div class="container p-5" >
  <div class="container">
    <div class="row">
      <div class="col-md-3">
       <%= render 'users/list',users:@users,user:@user,book:@book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h1>Book detail</h1>
        <table class="table table-hover table-inverse">
         <tbody>
            <tr>
              <td>
                <div class="container">
                  <%= link_to user_path(@user)  do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
                  <p class="container"><%= @user.name %></p>
                  <%end%>
                </div>
              </td>
              <td>
                <%= link_to @book do %>
                <%= @book.title %>
                <%end%>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td></td>
              <td>
                <% if @book.user == current_user %>
                <div class="btn btn-sm btn-success">
                  <%= link_to "Edit", edit_book_path(@book) %>
                </div>
              </td>  
              <td>
                <div class="btn btn-sm btn-danger ">
                  <%= link_to "Destroy", book_path(@book), method: :delete %>
                </div>
              </td>
                <%else%>
                <td></td>
                <td></td>
                <%end%>
              
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>